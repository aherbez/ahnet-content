package  {	import flash.display.MovieClip;	import GameObject;	import HealthBar;	import flash.text.TextField;		public class Game extends MovieClip	{		private static var _instance:Game;		private var test:Enemy;		private var thePlayer:Player;		private var playerHealthBar:HealthBar;		private var bugs:Array;				private var output:TextField;				private var playerHealth:Number;				public function Game() 		{			_instance = this;			this.playerHealthBar = new HealthBar(100,10,100);			this.playerHealthBar.x = 60;			this.playerHealthBar.y = 10;			thePlayer = new Player();			test = new BigEnemy(thePlayer);			addChild(test);								bugs = new Array();			for (var i=0;i<10;i++)			{				bugs[i] = new Enemy(thePlayer);				addChild(bugs[i]);			}			var m = new HealthPickup(thePlayer);			addChild(m);						var a = new Armor(thePlayer);			addChild(a);			this.output = new TextField();			this.output.x = 300;			this.output.y = 10;						addChild(thePlayer);			addChild(this.playerHealthBar);			addChild(this.output);		}				public static function get instance():Game		{			return _instance;		}				public function updatePlayerHealthBar(h:Number)		{			this.playerHealthBar.update(h);		}				public function LoseGame()		{			trace('YOU LOSE!');			this.output.text = "YOU LOST!";		}				public function WinGame()		{			trace('A WINNER IS YOU!');			this.output.text = "YOU WON!";		}	}	}