package  {	import flash.display.Sprite;		public class HealthBar extends Sprite	{		protected var outer:Sprite;		protected var health:Sprite;				protected var maxHealth:Number;		protected var currentHealth:Number;				protected var barWidth:Number;		protected var barHeight:Number;				public function HealthBar(w:Number,h:Number,max:Number) 		{			this.barWidth 	= w;			this.barHeight 	= h;			this.maxHealth 	= max;						this.outer = new Sprite();			outer.graphics.lineStyle(1,0x222222);			outer.graphics.beginFill(0xAAFFAA);			outer.graphics.drawRect(-(w/2),0,w,h);			outer.graphics.endFill();			outer.x = 0;			outer.y = 0;									addChild(outer);						this.health = new Sprite();			// health.graphics.lineStyle(0,0x222222);			health.graphics.beginFill(0x00FF00);			health.graphics.drawRect(0,1,(w-2),(h-2));			health.graphics.endFill();			health.x = -((w/2)-1);			health.y = 1;						addChild(health);		}				public function update(current:Number)		{						var scale = current/this.maxHealth;			if (scale > 1)			{				scale = 1;			}			if (scale < 0)			{				scale = 0;			}			this.health.scaleX = scale;		}	}	}